<% if policy(List).create? %>
  <%= link_to "Create list", new_list_path, class: "create-btn" %>
<% end %>
<% @lists.each do |list| %>
  <div class="d-flex justify-content-between align-items-center list-container">
    <%= link_to "#{list.name.titleize}", list_path(list), class: "list-name" %>
    <div>
      <%= link_to "<i class='fas fa-pen'></i>".html_safe, edit_list_path(list), class: "list-icon" %>
      <%= link_to "<i class='far fa-trash-alt'></i>".html_safe, list_path(list), class: "list-icon", method: :delete, data: { confirm: "Are you sure?"} %>
    </div>
  </div>
<% end %>


<% if policy(List).create? %>
  <%= link_to "Create list", new_list_path, class: "create-btn" %>
<% end %>
<% @lists.each do |list| %>
  <div class="d-flex justify-content-between align-items-center list-container">
    <div class="d-flex align-items-center">
      <label class="circle-box">
        <input type="checkbox" class="checkbox checkbox-round" />
        <span class="checkmark"></span>
      </label>
      <%= link_to "#{list.name.titleize}", list_path(list), class: "list-name" %>
    </div>
    <div>
      <%= link_to "<i class='far fa-trash-alt'></i>".html_safe, list_path(list), class: "hidden list-icon", method: :delete, data: { confirm: "Are you sure?"} %>
    </div>
  </div>
<% end %>

